---
const {title, subtitle, description} = Astro.props;
---

<div class="bg-gray-50 border-[1px] border-gray-500 drop-shadow-xl py-6 px-8 rounded-lg">
    <h3 class="text-xl font-mono font-semibold">{title}</h3>
    <svg class="absolute top-5 -z-10 right-5" width="29" height="30" viewBox="0 0 29 30" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M24.3578 0.286829L28.5424 29.3821L0.458184 18.493L24.3578 0.286829Z" fill="#E8C64F"/>
    </svg>
    <p class="text-gray-600 text-sm">{subtitle}</p>
</div>
