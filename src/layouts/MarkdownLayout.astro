---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout>
    <article class="prose dark:prose-invert max-w-none py-20 px-4 md:px-20 lg:px-40 xl:px-96">
        <span class="text-sm text-gray-400"><em>< ! --  {frontmatter.description} -- ></em></span>
        <h1 class="text-primary dark:text-secondary mb-2">{frontmatter.title}</h1>
        <span class="text-gray-400">Published on: {frontmatter.pubDate.toString().slice(0,10)}</span>
        <slot />
    </article>
</BaseLayout>
